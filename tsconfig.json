{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.astro",
    "src/**/*.js",
    "src/**/*.md",
    "src/**/*.md/*.js",
    "src/**/*.md/*.ts",
    "*.config.mjs",
    "*.config.ts"
  ],
  "exclude": [
    "dist",
    ".local",
    ".github"
  ]
}